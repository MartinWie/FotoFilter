<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- File appender for production logs (errors only) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.home}/.fotofilter/logs/fotofilter.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${user.home}/.fotofilter/logs/fotofilter.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set logging levels to ERROR only for production -->
    <logger name="utils.ImageUtils" level="ERROR"/>
    <logger name="services.ThumbnailCacheService" level="ERROR"/>
    <logger name="services.SelectionPersistenceService" level="ERROR"/>
    <logger name="viewmodels.FotoFilterViewModel" level="ERROR"/>

    <!-- Root logger - only ERROR level, no console output -->
    <root level="ERROR">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
